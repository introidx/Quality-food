<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/popular1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Egg Pasta"
            android:textColor="@color/myYBlack"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_cart"
            app:layout_constraintTop_toTopOf="@id/iv_cart" />

        <TextView
            android:id="@+id/tv_cart_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Spicy Chicken Burger"
            app:layout_constraintLeft_toLeftOf="@id/tv_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_cart" />

        <TextView
            android:id="@+id/tv_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:text="â‚¹"
            android:textColor="@color/myYellow"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_desc"

            />

        <TextView
            android:id="@+id/tv_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"

            android:layout_marginTop="15dp"
            android:text="599"
            android:textColor="@color/myYBlack"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_desc" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/myYellow"
            app:cardCornerRadius="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_cart_price">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/myYBlack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="1"
                    android:textColor="@color/myYBlack"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_minus"
                    app:layout_constraintLeft_toRightOf="@id/tv_minus"
                    app:layout_constraintTop_toTopOf="@id/tv_minus" />

                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/myYBlack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_qty"
                    app:layout_constraintLeft_toRightOf="@id/tv_qty"
                    app:layout_constraintTop_toTopOf="@id/tv_qty"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>